{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Node",
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
